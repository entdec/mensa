<%= form_with(model: customer, class: "contents") do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul class="list-disc ml-6">
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :country %>
    <%= form.text_field :country, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": customer.errors[:country].none?, "border-red-400 focus:outline-red-600": customer.errors[:country].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :isin %>
    <%= form.text_field :isin, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": customer.errors[:isin].none?, "border-red-400 focus:outline-red-600": customer.errors[:isin].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": customer.errors[:name].none?, "border-red-400 focus:outline-red-600": customer.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :stock_symbol %>
    <%= form.text_field :stock_symbol, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": customer.errors[:stock_symbol].none?, "border-red-400 focus:outline-red-600": customer.errors[:stock_symbol].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
